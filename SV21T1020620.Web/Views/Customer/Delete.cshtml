@model SV21T1020620.DomainModels.Customer
@{
    ViewBag.Title = "Xóa khách hàng";
}

<div class="box box-danger">
    <div class="box-body">

        <form action="~/Customer/Delete/@Model.CustomerId" method="post">
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <p class="form-control-static form-control">@Model.CustomerName</p>
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <p class="form-control-static form-control">@Model.ContactName</p>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static form-control">@Model.Email</p>
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static form-control">@Model.Address</p>
            </div>

            <div class="form-group">
                <label>Tỉnh/Thành:</label>
                <p class="form-control-static form-control">@Model.Province</p>
            </div>

            <div class="form-group">
                <label>
                    Trạng thái
                    <p class="form-control-static form-control">Tài khoản đang hoạt động</p>
                </label>
            </div>

            <div class="form-group text-right">

                @if(!SV21T1020620.BusinessLayers.CommonDataService.InUsedCustomer(Model.CustomerId))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xác nhận xóa
                    </button>
                }         
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
                
            </div>
        </form>
    </div>
</div>