@model IEnumerable<SV21T1020620.DomainModels.Shipper>
@{
    ViewBag.Title = "Quản lý người giao hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- from nhap vao tim kiem-->
        <form action="~/Shipper" method="get">
            <div class="input-group">

                <input name="searchValue" type="text" class="form-control" 
                        placeholder="Nhập tên người giao hàng cần tìm" value="@ViewBag.SearchValue">

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left: 5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!-- hien thi ket qua tim kiem-->
        <p style="margin: 10px 0 10px 0">
            Có <Strong>@ViewBag.RowCount</Strong> người giao hàng trong tổng số <Strong>@ViewBag.PageCount</Strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Người giao hàng</th>
                        <th>Điện thoại</th>
                        <th style="width: 80px"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td class="text-right">
                                <a href="Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if(p == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="~/Shipper?page=@p&searchValue=@ViewBag.SearchValue">@p</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>