@model SV21T1020620.DomainModels.Shipper
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">

            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />

            <div class="form-group">
                <label>Người giao hàng</label>
                <input type="text" class="form-control" name="@nameof(Model.ShipperName)" value="@Model.ShipperName">
            </div>

            <div class="form-group">
                <label>Điện thoại</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>
